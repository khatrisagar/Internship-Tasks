<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Data</title>
</head>
<body>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            width: 100%;
        }
        #main-container{
            display: flex;
            flex-direction: column;
            align-items:center;
            justify-content: center;
            background: linear-gradient(to top right, #ad48ffff, #48f9ffff);
            color: rgb(0, 0, 0);
        }
        table, tr, td, th{
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        table{
            margin-bottom: 20px;
            border: 3px solid rgb(0, 0, 0);
        }
        td,th{
            padding: 5px;
        }
        th>a{
            color:rgb(255, 255, 255);
        }
        #linkContainer a{
            float: left;
            padding: 8px 16px;
        }
        .linkBtn{
            background-color: #ffffff;
            padding: 5px 10px;
            border: none;
            text-decoration: none;
            color: rgb(0, 0, 0);
            text-align: center;
            margin: 4px 2px;
            font-size: 15px;
            justify-content:stretch;
        }
        .linkBtn:hover{
            border-radius: 5px;
            background-color: rgb(250, 7, 39);
        }
        .active{
            background-color:chartreuse;
            border-radius: 5px;
        }
        .sortByOrder{
            display: flex;
            column-gap: 20px;
            margin: 20px 0;
        }
        .selectBox{
            background-color: #ffcdcd ;
            font-size: 20px;
            border: 2px solid black;
            border-radius: 5px;
        }


        .searchContainer{
            margin: 20px 0;           
        }
        #searchBox{
            font-size: large;
            border: 2px solid #000000;
            border-radius: 8px;
        }
        #searchBtn{
            border: none;
            padding: 6px 8px;
            background-color: #ffffff;
            border-radius: 8px;
            color: #000000;
            cursor: pointer;

        }
        #searchBtn:hover{
            background-color: #000000;
            color: #ffffff;
        }

    </style>


        <div id="main-container">
            <!-- <div id="sortByOrder" class="sortByOrder">
                
                <select name="sortingOrder" id="sortingOrder" class="selectBox">
                    <option value="accending">Accending</option>
                    <option value="decending">Decending</option>
                </select>

                <select name="sortingBy" id="sortingBy" class="selectBox">
                    <option value="firstName"><a href="/table/?page=1&field=student_id&order=<%=order%>">First Name</a></option>
                    <option value="lastName">Last Name</option>
                    <option value="city">City</option>
                </select>
            </div> -->
            
            <div class="searchContainer" id="searchBoxContainer">
                <form action="/table/" method="get" >
                    <input type="text" id="searchBox" name="searchVal" placeholder="Search"   />
                    <input type="submit" id="searchBtn" value="Search">
                </form>
            </div>

            <table id="tableMain">
                <tr>
                    <th><a href="/table/?page=1&field=student_id&order=<%=order%>">Student ID</a></th>
                    <th><a href="/table/?page=1&field=first_name&order=<%=order%>">First Name</a></th>
                    <th><a href="/table/?page=1&field=last_name&order=<%=order%>">Last Name</a></th>
                    <th><a href="/table/?page=1&field=date_of_birth&order=<%=order%>">Date Of Birth</a></th>
                    <th><a href="/table/?page=1&field=contact_number&order=<%=order%>">Contact Number</a></th>
                    <th><a href="/table/?page=1&field=email&order=<%=order%>">Email</a></th>
                    <th><a href="/table/?page=1&field=city&order=<%=order%>">City</a></th>
                    <th><a href="/table/?page=1&field=clg_name&order=<%=order%>">College</a></th>
                </tr>
                <%resultArr.forEach(function(data){ %>
                    <tr>
                        <td><%= data.student_id%></td>
                        <td><%= data.first_name%></td>
                        <td><%= data.last_name%></td>
                        <td><%= data.date_of_birth%></td>
                        <td><%= data.contact_number%></td>
                        <td><%= data.email%></td>
                        <td><%= data.city%></td>
                        <td><%= data.clg_name%></td>
                    </tr>   
                <% }); %>
            </table>
            

            <div id="linkContainer">
            <% for(let i = 1; i<=counter;i++){ %>
                <% if(i == page){ %>
                    <a id="btn" class="linkBtn active" href="/table/?page=<%= i%>&field=<%= field%>"><%= i %></a> 
                    <% } else {%>
                        <a id="btn" class="linkBtn" href="/table/?page=<%= i%>&field=<%= field%>"><%= i %></a> 
                    <%}%>
            <% } %>
            </div>
        </div>

</body>
</html>