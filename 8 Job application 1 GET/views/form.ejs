<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Application Form</title>
</head>
<body>
    <style>
        *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}


.containerMain{
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 1.5;
}

fieldset{
    border: 2px solid black;
    padding: 20px;
    margin: auto;
    width: 1000px;
}

.headerSection{
    text-align: center;
}
label{
    margin-right: 10px;
}

    #addEduField{
        padding: 10px;
        border-radius: 50%;
        border: none;
        color: #ffffff;
        background-color: #192764;
    }

    </style>

<div class="containerMain">
    <section class="headerSection">
        <h1>Job Application Form</h1>
    </section>
    
    
        <form action="/" method="POST">
        <section class="basicDetails">
            <fieldset>
                <legend>Basic Details</legend>
                <table>
                    <tr>
                        <td><label for="first_name">First Name</label></td>
                        <td><input type="text" name="first_name" class="firstName rightlabel" /></td>
                        <td><label for="last_name">last Name</label></td>
                        <td><input type="text" name="last_name" class="lastName" /></td>
                        
                    </tr>

                    <tr>
                        <td><label for="designation">Designation</label></td>
                        <td><input type="text" name="designation" class="designation" /></td>
                        <td><label for="address">Address</label></td>
                        <td>
                            <textarea name="address" id="addressField" cols="30" rows="1"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="email">Email</label></td>
                        <td><input type="text" name="email" class="email" /></td>
                        <td><label for="address_2">Address 2</label></td>
                        <td>
                            <textarea name="address_2" id="addressField" cols="30" rows="1" /></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="mobile_number">Phone Number</label></td>
                        <td><input type="text" name="mobile_number" class="mobileNumber" /></td>

                        <td><label for="city">City</label></td>
                        <td><input type="text" name="city" class="cityField"></td>
                    </tr>

                    <tr>
                        <td><label for="date_of_birth">Date Of Birth</label></td>
                        <td><input type="date" name="date_of_birth" class="dateOfBirth"></td>
                        <td><label for="state">State</label></td>
                        <td><select name="" id="">
                            <option value="" disabled selected>Select Your State</option>
                            <% for(let i = 0 ; i<stateData.length; i++){ %>
                                <option value=""><%= stateData[i].option_value%></option>
                            <% } %>
                        </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="gender">Gender</label></td>
                        <td><select name="" id="">
                            <option value="" disabled selected>Select</option>
                            <% for(let i = 0 ; i<genderData.length; i++){ %>
                                <option value=""><%= genderData[i].option_value%></option>
                            <% } %>
                        </select>
                        </td>

                        <td><label for="zipcode">Zip Code</label></td>
                        <td><input type="text" name="zipcode" class="zipCode"/></td>
                    
                    </tr>
                    <tr>
                        <td>
                            <label for="relationship_status">Relationship Status</label>
                        </td>
                        <td><select name="" id="">
                            <option value="" disabled selected>Status</option>
                            <% for(let i = 0 ; i<relationData.length; i++){ %>
                                <option value=""><%= relationData[i].option_value%></option>
                            <% } %>
                        </select>
                        </td>
                    </tr>
                </table>
            </fieldset> 
        </section>       
    
        <section class="educationDetails">
            <fieldset>
                <legend>Education Details</legend>
                
                <table id="eductionTable">
                    <tr id="addEduFieldTr">
                        <td>
                            <input type="button" onclick="addEdu()" id="addEduField" value=" + "/>
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <hr /> 
                        </td>
                    </tr>
                    <tr>
                        <td><label for="course_name">Course Name</label></td>
                        <td>
                            <select name="" id="">
                                <option value="" disabled selected>Select Your Course</option>
                                <% for(let i = 0 ; i<courseData.length; i++){ %>
                                    <option value=""><%= courseData[i].option_value%></option>
                                <% } %>
                            </select>
                        </td>

                        <td><label for="university_name">University Name</label></td>
                        <td>
                            <select name="" id="">
                                <option value="" disabled selected>Select Your University</option>
                                <% for(let i = 0 ; i<uniData.length; i++){ %>
                                    <option value=""><%= uniData[i].option_value%></option>
                                <% } %>
                            </select>
                        </td>

                    </tr>

                    <tr>
                        <td><label for="passing_year">Passing Year</label></td>
                        <td><input type="text" name="passing_year" class="passingYear"></td>
                        
                        <td><label for="percentage">Percentage</label></td>
                        <td><input type="text" name="percentage" class="percentage"></td>
                        
                    </tr>
                </table>
            </fieldset>
        </section>

        <section class="workExperience">
            <fieldset>
                <legend>Work Experience</legend>
            

                <table id="workExeperience">
                    <tr id="workExeperienceTr">
                        <input type="button" onclick="addWorkExe()"value="Add Work Experince"/>
                    </tr>
                  
                </table>
            </fieldset>
        </section>

        <section class="languageKnown">
            <fieldset>
                <legend>Language Known</legend>
            
                <table>
                    <tr>    
                        <td><label for="hindi">Hindi</label></td>
                        <td><input type="checkbox" name="hindi" class="language1"></td>
                        <td><label for="read">Read</label></td>
                        <td><input type="checkbox" name="read" class="language1"></td>
                        <td><label for="write">Write</label></td>
                        <td><input type="checkbox" name="write" class="language1"></td>
                        <td><label for="speak">Speak</label></td>
                        <td><input type="checkbox" name="speak" class="language1"></td>
                    </tr>
                    <tr>    
                        <td><label for="gujrati">Gujrati</label></td>
                        <td><input type="checkbox" name="hindi" class="language2"></td>
                        <td><label for="read">Read</label></td>
                        <td><input type="checkbox" name="read" class="language2"></td>
                        <td><label for="write">Write</label></td>
                        <td><input type="checkbox" name="write" class="language2"></td>
                        <td><label for="speak">Speak</label></td>
                        <td><input type="checkbox" name="speak" class="language2"></td>
                    </tr>
                    <tr>    
                        <td><label for="english">English</label></td>
                        <td><input type="checkbox" name="hindi" class="language3"></td>
                        <td><label for="read">Read</label></td>
                        <td><input type="checkbox" name="read" class="language3"></td>
                        <td><label for="write">Write</label></td>
                        <td><input type="checkbox" name="write" class="language3"></td>
                        <td><label for="speak">Speak</label></td>
                        <td><input type="checkbox" name="speak" class="language3"></td>
                    </tr>
                </table>
            </fieldset>
        </section>

        <section>
            <fieldset>
                <legend>Technologies You Know</legend>

                <table id="techTable">

                    <tr id="addTechnology">
                        <input type="text" id="techName" />
                        <input type="button" onclick="addTech()" id="addTechnologyField" value="Add Technologies"/>
                    </tr>
                </table>
            </fieldset>
        </section>

        <section>
            <fieldset>
                <legend>Reference Contact</legend>
                
                <table id="refenreceTable">
                    <tr id="reference">
                        <input type="button" onclick="addReference()" id="referncesBtn" value="Add More References"/>
                    </tr>
                    <tr>
                        <td><label for="name">Reference Name</label></td>
                        <td><input type="text" name="name" /></td>
                        
                        <td><label for="contact_number">Contact Number</label></td>
                        <td><input type="text" name="contact_number" /></td>
                        
                        <td><label for="relation">Relation</label></td>
                        <td><input type="text" name="relation" /></td>
                    </tr>
                </table>
            </fieldset>
        </section>

        <section>
            <fieldset>
                <legend>Prefrences</legend>
                
                <table>
                    <tr>
                        <td><label for="location">Prefered Location</label></td>
                        <td>
                            <select name="" id="">
                                <option value="" disabled selected>Select Location</option>
                                <% for(let i = 0 ; i<locationData.length; i++){ %>
                                    <option value=""><%= locationData[i].option_value%></option>
                                <% } %>
                            </select>
                        </td>

                        <td><label for="department">Department</label></td>
                        <td>
                            <select name="" id="">
                                <option value="" disabled selected>Select Department</option>
                                <% for(let i = 0 ; i<deptData.length; i++){ %>
                                    <option value=""><%= deptData[i].option_value%></option>
                                <% } %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="current_ctc">Curernt CTC</label></td>
                        <td><input type="text" name="current_ctc" class="current_ctc"></td>
                    
                    
                        <td><label for="expected_ctc">Expected CTC</label></td>
                        <td><input type="text" name="expected_ctc" class="expected_ctc"></td>
                    </tr>

                    <tr>
                        <td><label for="notice_period">Notice Pereiod</label></td>
                        <td><input type="text" name="notice_period" class="noticePeriod"></td>

                    </tr>
                </table>
            </fieldset>
        </section>
        <table>
            <Tr><td>
                <input type="submit" value="submit">
            </td></Tr>
        </table>
    </form> 
    </div>
<script>
    let eductionId = document.getElementById("eductionTable");
let addEduField = document.getElementById("addEduField")
let addEduFieldTr = document.getElementById("addEduFieldTr")


let data = `
<td><label for="course_name">Course Name</label></td>
<td>
 <select name="" id="">
<option value="" disabled selected>Select Your Course</option>
<% for(let i = 0 ; i<courseData.length; i++){ %>
<option value=""><%= courseData[i].option_value%></option>
<% } %>
</select>
</td>

<td><label for="university_name">University Name</label></td>
<td>
<select name="" id="">
 <option value="" disabled selected>Select Your University</option>
<% for(let i = 0 ; i<uniData.length; i++){ %>
<option value=""><%= uniData[i].option_value%></option>
<% } %>
</select>
</td>`

let data2 = `<td><label for="passing_year">Passing Year</label></td>
<td><input type="text" name="passing_year" class="passingYear"></td>

<td><label for="percentage">Percentage</label></td>
<td><input type="text" name="percentage" class="percentage"></td>`

function addEdu(){
    let trEdu = document.createElement('tr');
    let trEdu2 = document.createElement('tr');
    trEdu.innerHTML += `${data}`
    trEdu2.innerHTML += `${data2}`


    eductionId.appendChild(trEdu)
    eductionId.appendChild(trEdu2)
}

let techId = document.getElementById("techTable");
let techName = document.getElementById("techName").value

function addTech(){
    let techName = document.getElementById("techName").value
    let trTech = document.createElement('tr');
    trTech.innerHTML += `
    <td><label for="${techName}">${techName}</label></td>
    <td><input type="radio" name="${techName}"></td>
    <td><label for="beginer">Beginer</label></td>
    <td><input type="radio" name="${techName}" ></td>
    <td><label for="mideator">Mideator</label></td>
    <td><input type="radio" name="${techName}"></td>
    <td><label for="expert">Expert</label></td>`

    techTable.appendChild(trTech)
}

let workExeId = document.getElementById("workExeperience")

function addWorkExe(){
    let trWork = document.createElement('tr');
    let trWork2 = document.createElement('tr');

    trWork.innerHTML= `<td><label for="company_name">Company Name</label></td>
    <td><input type="text" name="company_name" class="companyName" /></td>

    <td><label for="designation">Designation</label></td>
    <td><input type="text" name="designation" class="designation" /></td>`

    trWork2.innerHTML = `<td><label for="start_date">Start Date</label></td>
    <td><input type="date" name="start_date" class="startDate"></td>

    <td><label for="end-date"></label>End Date</td>
    <td><input type="date" name="end_date" class="endDate"></td>`

workExeId.appendChild(trWork)
workExeId.appendChild(trWork2)
}

let referenceTable = document.getElementById("refenreceTable")

function addReference(){
    let referenceTr = document.createElement('tr')

    referenceTr.innerHTML += `<td><label for="name">Reference Name</label></td>
    <td><input type="text" name="name" /></td>
    
    <td><label for="contact_number">Contact Number</label></td>
    <td><input type="text" name="contact_number" /></td>
    
    <td><label for="relation">Relation</label></td>
    <td><input type="text" name="relation" /></td>`
        
    referenceTable.appendChild(referenceTr)
    
}


</script>
</body>
</html>

